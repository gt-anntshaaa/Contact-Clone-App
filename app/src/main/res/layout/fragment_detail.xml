<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.main.detail.DetailFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="180dp">
        <ImageView
            android:id="@+id/picPerson"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_baseline_person_pin_24"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ahsan"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:fontFamily="sans-serif-black"
            app:layout_constraintTop_toBottomOf="@id/picPerson"
            app:layout_constraintStart_toStartOf="@id/picPerson"
            app:layout_constraintEnd_toEndOf="@id/picPerson"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tvPhone"
        android:textIsSelectable="true"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/header"
        android:layout_marginTop="10dp"
        android:text="081291231"
        android:fontFamily="sans-serif-black"
        android:paddingStart="15dp"
        android:paddingTop="15dp"
        android:paddingBottom="0dp"
        android:paddingEnd="15dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:fontFamily="sans-serif-black"
        android:text="ahsan@gmail.com"
        app:layout_constraintTop_toBottomOf="@id/tvPhone"
        android:id="@+id/tvEmail"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingStart="15dp"
        android:paddingTop="0dp"
        android:paddingEnd="15dp"
        android:paddingBottom="15dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/tvEmail"
        android:layout_marginTop="10dp"
        android:background="@color/black"/>
    <ImageButton
        android:id="@+id/imgBtnCall"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="@id/tvPhone"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_phone"
        android:layout_marginEnd="70dp"
        android:background="@drawable/bg_img_btn"
        android:padding="15dp"
        app:layout_constraintBottom_toBottomOf="@id/tvPhone"/>
    <ImageButton
        android:id="@+id/imgBtnMessage"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="@id/tvPhone"
        app:layout_constraintStart_toEndOf="@id/imgBtnCall"
        android:src="@drawable/ic_message"
        android:layout_marginStart="15dp"
        android:background="@drawable/bg_img_btn"
        android:padding="15dp"
        app:layout_constraintBottom_toBottomOf="@id/tvPhone"/>
    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnShare"
        android:gravity="start"
        app:layout_constraintTop_toBottomOf="@id/tvEmail"
        android:layout_marginTop="20dp"
        android:paddingStart="15dp"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:textAllCaps="false"
        android:text="Share contact"
        android:paddingBottom="0dp"
        android:fontFamily="sans-serif-black"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        app:layout_constraintTop_toBottomOf="@id/btnShare"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingStart="15dp"
        android:paddingTop="0dp"
        android:fontFamily="sans-serif-black"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:text="Hapus kontak"
        android:textColor="#8C3737"
        android:textAllCaps="false"/>

</androidx.constraintlayout.widget.ConstraintLayout>